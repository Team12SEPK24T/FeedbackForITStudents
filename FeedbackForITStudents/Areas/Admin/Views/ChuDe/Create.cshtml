@model FeedbackForITStudents.Models.CHUDE

@{
    ViewBag.Title = "Thêm chủ đề";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
    
<main style="padding-top: 150px">
    <div class="container">
        <div class="col-lg-12">
            <div class="grid">
                <div class="text-center mb-sm-5 mb-4">
                    <h3 class="title-big">Thêm chủ đề</h3>
                </div>
                <div class="grid-body">
                    <div class="item-wrapper">
                        <div class="row mb-3">
                            <div class="col-md-8 mx-auto">
                                @using (Html.BeginForm("Create", "ChuDe", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-update", @class = "form-add" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group row showcase_row_area">
                                        <div class="col-md-3 showcase_text_area">
                                            <label for="inputType1">Tên chủ đề</label>
                                        </div>
                                        <div class="col-md-9 showcase_content_area">
                                            @Html.EditorFor(model => model.TenCD, new { htmlAttributes = new { @class = "form-control", @id = "inputType1", @required = true, @minLength = 0, @maxLength = "50" } })
                                            @Html.ValidationMessageFor(model => model.TenCD, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="row showcase_row_area mb-3" style="position: absolute;left: 30%; bottom: auto">
                                        <div class="col-md-6 showcase_text_area">
                                            <label>
                                                <a href="@Url.Action("Index", "ChuDe")">
                                                    <button id="cancel" type="button" class="btn btn-light" style="width: 190px">Hủy</button>
                                                </a>
                                            </label>
                                        </div>
                                        <div class="col-md-6 showcase_content_area">
                                            <div class="custom-file">
                                                <input type="submit" class="btn btn-outline-primary" style="width: 200px" value="Thêm" />
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>