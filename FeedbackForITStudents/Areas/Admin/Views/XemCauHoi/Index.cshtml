@model IEnumerable<FeedbackForITStudents.Models.CAUHOIDADUYET>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<script src="~/assets/js/jquery-3.3.1.min.js"></script>


<main style="padding-top: 150px">
    <div class="container">
        <div class="col-lg-12">
            <div class="grid">
                <div class="text-center mb-sm-5 mb-4">
                    <h3 class="title-big">Danh sách câu hỏi</h3>
                </div>
                <div class="item-wrapper">
                    <div class="table-responsive">
                        <table class="table" id="cauhoi-table">
                            <thead class="thead-dark">
                                <tr>
                                    <th>
                                        Nội dung câu hỏi
                                    </th>
                                    @*<th>
                                            Html.DisplayNameFor(model => model.Andanh)
                                        </th>*@
                                    <th>
                                        Thời gian
                                    </th>
                                    <th>
                                        Tài khoản SV
                                    </th>
                                    @*<th>
                                            @Html.DisplayNameFor(model => model.AspNetUser.Email)
                                        </th>*@
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                   // using (Html.BeginForm("Browse", "DuyetCauHoi", new { id = item.MaCH }))
                                    //{
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Noidung)
                                            </td>
                                            @*<td>
                                                    @Html.DisplayFor(modelItem => item.Andanh)
                                                </td>*@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Thoigian)
                                            </td>
                                            <td>
                                                @if (item.Andanh == true)
                                                {
                                                    @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                                                }
                                                else
                                                {
                                                    <label>Ẩn danh</label>
                                                }
                                            </td>
                                            <td class="col-lg-2">

                                               
                                                <button type="button" class="btn btn-outline-info">Trả lời</button>


                                            </td>
                                            <td>
                                                @if (item.pin == true)
                                                {
                                                    <i class="fa fa-star icon-color" aria-hidden="true"></i>
                                                }
                                                else
                                                {
                                                    
                                                }
                                            </td>
                                        </tr>
                                   // }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</main>
}
<script>
$(document).on("click", "[type='checkbox']", function(e) {
        if (this.checked) {
            $(this).attr("value", "true");
        } else {
            $(this).attr("value","false");}
    });
</script>