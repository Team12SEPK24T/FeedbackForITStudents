@model FeedbackForITStudents.Models.CAUHOIDADUYET

@{
    ViewBag.Title = "Trả lời câu hỏi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<main style="padding-top: 150px">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 text11-content m-auto">
                <div class="text-center mb-sm-5 mb-4">
                    <h3 class="title-big" style="color:midnightblue">Trả lời câu hỏi</h3>
                </div>
                <div class="card ">
                    <div class="card-header">
                        Câu hỏi
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4" style="max-width: 90px;">
                                <img src="~/assets/images/team2.jpg" class="img-fluid rounded-start" alt="placeholder image">
                            </div>
                            <div class="col-md-10">
                                <h5 class="card-title">@Model.Noidung</h5>
                                <figcaption class="blockquote-footer">
                                    @Model.Thoigian.ToShortDateString() <strong>by</strong><cite title="Source Title">
                                        @if (Model.Andanh == false)
                                        {
                                            @Model.Email
                                        }
                                        else
                                        {
                                            <label>Ẩn danh</label>
                                        }
                                    </cite>
                                </figcaption>
                            </div>
                        </div>
                    </div>
                </div>
                    <div class="col-md-9.5 offset-md-1" style="padding-top: 10px">
                        <form method="post" action='@Url.Action("Reply", "Xemcauhoi")'>
                            <div class="card border-info mb-3">
                                <div class="card-header">
                                    Trả lời
                                </div>
                                <div class="form-input">
                                    @*<textarea class="form-control" placeholder="Nhập câu trả lời ở đây" id="cauTraloi" style="height: 150px"></textarea>*@
                                    <textarea class="form-control" name="Noidungtraloi" rows="5" placeholder="Nhập câu trả lời ở đây" required="" id="Traloi"></textarea>
                                </div>

                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn button-style " id="reply" style="float:right" value="Gửi câu trả lời"></input>
                            </div>
                        </form>
                    </div>
            </div>
        </div>
    </div>
</main>
<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
                window.location = "/Home/Index";
            };
    </script>
}